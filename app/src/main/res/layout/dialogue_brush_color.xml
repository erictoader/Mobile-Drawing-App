<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the brush color"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/linear_layout_color_array1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <LinearLayout
        android:id="@+id/linear_layout_color_array1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/linear_layout_color_array2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        >

        <ImageButton
            android:id="@+id/ib_color_red"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src = "@drawable/red_color_brush"
            />

        <ImageButton
            android:id="@+id/ib_color_orange"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src = "@drawable/orange_color_brush"
            />

        <ImageButton
            android:id="@+id/ib_color_yellow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src = "@drawable/yellow_color_brush"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_color_array2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_color_array1"
        >

        <ImageButton
            android:id="@+id/ib_color_green"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src = "@drawable/green_color_brush"
            />

        <ImageButton
            android:id="@+id/ib_color_blue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src = "@drawable/blue_color_brush"
            />

        <ImageButton
            android:id="@+id/ib_color_indigo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src = "@drawable/indigo_color_brush"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>